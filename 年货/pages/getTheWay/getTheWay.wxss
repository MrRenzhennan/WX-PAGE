/* pages/getTheWay/getTheWay.wxss */

.content {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.content .bgi {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.content .bgi1 {
  width: 100%;
  height: 102vh;
  position: absolute;
  top: -2vh;
  left: 0;
  z-index: 0;
}

.content .bgi2 {
  width: 100%;
  height: 100%;
  position: absolute;
  top: -160rpx;
  left: 0;
  z-index: 0;
}

.title {
  width: 100%;
  color: #facd89;
  padding-top: 140rpx;
  display: flex;
  justify-content: center;
  font-size: 60rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.rules {
  width: 690rpx;
  height: 830rpx;
  margin: 0 auto;
  position: relative;
}

.rules .rules-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.center {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 100rpx 0rpx 0 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
}

.center .img-box {
  width: 430rpx;
  z-index: 1;
}

.center .img-box image {
  width: 100%;
  height: 118rpx;
  z-index: 1;
}

.center text {
  width: 350rpx;
  margin-top: -20rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 300;
  line-height: 35rpx;
  letter-spacing: 2rpx;
}
