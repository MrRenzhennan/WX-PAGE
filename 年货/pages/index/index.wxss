/* pages/index/index.wxss */
.content{
  width: 100vw;
  height: 100%;
  position: relative;
}
.content .bgi{
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.content .bgi1{
  width: 100%;
  height: 102vh;
  position: absolute;
  top: -2vh;
  left: 0;
  z-index: -1;
}
.content .bgi2{
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  z-index: -1;
}

.baoxiang{
  width: 100%;
  display: flex;
  justify-content: center;
  padding-top: 180rpx;
}
.baoxiang image{
  width: 512rpx;
  height: 489rpx;
}

.open{
 width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
  z-index: 1;
}

.open image{
  width: 249rpx;
  height: 88rpx;
}

.num{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}
.num view{
  padding: 5rpx;
  background: #e8a11a;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #fff;
}

.rules{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
  color: #fff;
  font-size: 26rpx;
  align-items: center;
}
.rules image{
  width: 12rpx;
  height: 15rpx;
  margin-left: 10rpx;
}


.gift-bg{
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

.ct{
  width: 75%;
  margin: 0 auto;
  margin-top: 100rpx;
  transform: scale(0);
  transition: all 0.5s linear;
}
.ct-scale{
  transform: scale(1);
}
.t-img image{
  width: 100%;
  height: 400rpx;
}
.t-center{
  width: 100%;
  background: #fff;
  margin-top: -25rpx;
  border-radius: 20rpx;
  position: relative;
  z-index: -1;
}
.t-center::before{
  content: '';
  position: absolute;
  top: -12rpx;
  left: -8rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #a71406;
}
.t-center::after{
  content: '';
  position: absolute;
  top: -12rpx;
  right: -8rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #a71406;
}
.tt{
  font-size: 28rpx;
  color: #d50001;
  text-align: center;
  font-weight: 600;
  padding-top: 20rpx;
  margin-bottom: 30rpx;
}
.btn-box{
  width: 100%;
  display: flex;
  justify-content: center;
}
.btn-box image{
  width: 135rpx;
  height: 47rpx;
}
.btn-box .s1{
  margin-right: 10rpx;
}
.btn-box .s2{
  margin-left: 10rpx;
}
.input-box{
  width: 350rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
.input-box input,.input-box textarea{
  width: 100%;
  border-radius: 10rpx;
  border: 1px solid #d50001;
  font-size: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  min-height: 70rpx;
}
.input-box textarea{
  padding-top: 10rpx;
  height: 100rpx;
}
.txt{
  color: #d50001;
  font-size: 20rpx;
  text-align: center;
  font-weight: 600;
}
.bt{
  display: flex;
  justify-content: flex-end;
  color: #d50001;
  font-size: 24rpx;
  align-items: center;
  font-weight: 600;
  letter-spacing: 2rpx;
  padding: 20rpx 0;
}
.bt image{
  width: 12rpx;
  height: 15rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
}