/**index.wxss**/
.slider,
.slider swiper,
.slider image{
  width:100%;
  height: 390rpx;
}
.index-nav{
  display: flex;
  flex-wrap: wrap;
}
.index-nav .nav-item{
  width: 33.3333%;
  height: 200rpx;  
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  border-bottom: 1rpx solid #ccc;
}
.index-nav .nav-item:nth-child(3n)::after{
  width: 0;
}
.index-nav image{
  width: 80rpx;
  height: 80rpx;
}
.index-enter{
  display: flex;
  padding: 20rpx 25rpx;
  
}
.index-enter .index-item{
  width: 50%;
  display: flex;
  justify-content: center;  
}
.index-enter image{
  border-radius: 10rpx;
  width: 320rpx;
  height: 170rpx;
}
