/**app.wxss**/
page{
  background-color: #fff;
  height: 100%;
}


/* 分区间隔 */
.divider{
  width: 100%;
  height: 18rpx;
  background-color: #f7f7f7;
}
/* 分曲线 */
.divider-line{
  width: 100%;
  height: 1px;
}
/* 分隔线 */
.line{
  border-bottom: 1px solid #e1e1e1;
}
/* 省略号 */
.ell{
   overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/*  */
.mt30{
  margin-bottom: 30rpx;
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
