/* pages/index/index.wxss */
.slider,
.slider swiper,
.slider image{
  width:100%;
  height: 270rpx;
}
.Partition{
  width: 100%;
  box-sizing: border-box;
  padding: 18rpx 30rpx 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
  background: #fff;
}
.Partition navigator{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.Partition text{
  color: #888888;
  font-size: 24rpx;
  margin-top: 12rpx;
}
.Partition image{
  width: 90rpx;
  height: 90rpx;
}


.new-title{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  padding: 0px 30rpx;
  box-sizing: border-box;
}
.new-title .left text{
  font-size: 34rpx;
  color: #333333;
  font-weight: bold;
}
.new-title navigator view{
  width: 60rpx;
  height: 40rpx;
}
.new-title navigator view image{
  width: 100%;
  height: 100%;
}

.nr{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.nr image{
  width: 218rpx;
  height: 326rpx;
  border-radius: 8rpx;
}


.qbw{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.qbw image{
  width: 336rpx;
  height: 190rpx;
   border-radius: 8rpx;
}





