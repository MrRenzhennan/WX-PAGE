.taxtArea-box{
  width: 100%;
  height: 220rpx;
  padding: 30rpx;
  background: #f5f5f5;
  border-top: 1rpx solid #eaeaea;
  border-bottom: 1rpx solid #eaeaea;
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  display: flex;
  align-items: flex-end;
}
.taxtArea-box .go{
  font-size: 26rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  color: #c4232b;
  letter-spacing: 2rpx;
}
.taxtArea-box textarea{
  width: 615rpx;
  height: 100%;
  background: #fff;
  font-size: 24rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
}