.taxtArea-box{
  width: 100%;
  padding: 30rpx;
  background: #f5f5f5;
  border-top: 1rpx solid #eaeaea;
  border-bottom: 1rpx solid #eaeaea;
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  z-index: 10;
  overflow: hidden;
}
.taxtArea-box .go{
  font-size: 30rpx;
  letter-spacing: 2rpx;
  float: right;
  width: 148rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  border-radius: 56rpx;
  background: #fff;
  font-family: PingFang-SC-Medium;
  color: #999;
  margin-top: 20rpx;
}
.taxtArea-box textarea{
  width: 100%;
  height: 147rpx;
  background: #fff;
  font-size: 30rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
  color: rgb(153, 153, 153);
}
.placeholderClass{
  font-size: 30rpx;
  color: rgb(153, 153, 153);
}