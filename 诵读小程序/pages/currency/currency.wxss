/* pages/currency/currency.wxss */

page {
  background: #fff;
  font-family: PingFang-SC-Medium;
}

.title {
  font-size: 48rpx;
  color: #000;
  box-sizing: border-box;
  padding: 30rpx;
  font-weight: 600;
  font-family: PingFang-SC-Bold;
}

.detail {
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #999;
}

.detail text {
  margin-right: 20rpx;
}

.center {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  padding-bottom: 176rpx;
}

.center video {
  width: 100%;
}

.msg {
  width: 100%;
  color: #000;
  font-size: 36rpx;
  line-height: 50rpx;
  font-family: PingFang-SC-Medium;
  letter-spacing: 2rpx;
}

.foot {
  width: 100%;
  height: 160rpx;
  padding: 20rpx 30rpx 30rpx 30rpx;
  display: flex;
  position: fixed;
  background: #fff;
  bottom: 0;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 1rpx solid #f5f5f5;
}

.foot .input-box {
  width: 370rpx;
  height: 55rpx;
  display: flex;
  align-items: center;
  background: #f4f4f4;
  border-radius: 55rpx;
  box-sizing: border-box;
}

.foot .input-box image {
  width: 34rpx;
  height: 30rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.foot .input-box text {
  font-size: 24rpx;
  color: #999;
}

.foot .pl {
  display: flex;
  align-items: center;
}

.foot .num {
  font-size: 22rpx;
  color: #999;
  margin-left: 10rpx;
}

.icon_pinglun {
  width: 36rpx;
  height: 36rpx;
}

.icon_weixin {
  width: 44rpx;
  height: 36rpx;
}

.icon_pengyouquan {
  width: 36rpx;
  height: 36rpx;
}

