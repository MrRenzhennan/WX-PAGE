/* pages/votingRecord/votingRecord.wxss */
page{
  background: #f5f5f5;
}

.list{
  width: 100%;
  height: 180rpx;
  background: #fff;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.list:first-of-type{
  margin-top: 40rpx;
}
.list > view:first-child{
  font-family: PingFang-SC-Bold;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  color: #000;
}
.list > view:last-child{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list > view:last-child view:first-child{
  font-size: 24rpx;
  color: #999;
}
.list > view:last-child view:first-child text:first-child{
  margin-right: 20rpx;
}
.list > view:last-child view:last-child{
  font-size: 24rpx;
  color: #c4232b;
}

.bx {
  width: 100%;
  height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
}

image {
  width: 92rpx;
  height: 81rpx;
  margin-top: -130rpx;
}

.bx text {
  color: #000;
  margin-top: 49rpx;
  font-family: PingFang-SC-Bold;
	font-size: 48rpx;
	font-weight: normal;
	font-stretch: normal;
}

.bx text:last-child {
  font-size: 30rpx;
  color: rgb(153, 153, 153);
  margin-top: 39rpx;
  font-family: PingFang-SC-Medium;
	font-weight: normal;
	font-stretch: normal;
}