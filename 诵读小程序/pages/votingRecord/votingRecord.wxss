/* pages/votingRecord/votingRecord.wxss */
page{
  background: #f5f5f5;
}
.list{
  width: 100%;
  height: 180rpx;
  background: #fff;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.list:first-child{
  margin-top: 40rpx;
}
.list > view:first-child{
  font-family: PingFang-SC-Bold;
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  color: #000;
}
.list > view:last-child{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list > view:last-child view:first-child{
  font-size: 24rpx;
  color: #999;
}
.list > view:last-child view:first-child text:first-child{
  margin-right: 20rpx;
}
.list > view:last-child view:last-child{
  font-size: 24rpx;
  color: #c4232b;
}