/* pages/screening/screening.wxss */
page{
  background: #f5f5f5;
  font-family: PingFang-SC-Medium;
}
.title{
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  margin-top:20rpx;
  width: 100%;
}
.arr{
  width: 100%;
  box-sizing: border-box;
  padding: 0 13rpx 0 30rpx;
  display: flex;
  flex-wrap: wrap;
  background: #fff;
}
.arr view{
  width: 160rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  background: #f5f5f5;
  color: #999;
  margin-right: 17rpx;
  border-radius: 8rpx;
  margin-bottom: 17rpx;
  overflow: hidden;
  position: relative;
}
.arr view.active{
  background: #fff0f1;
  color: #c4232b;
}
.arr view.active i{
  color: #fff;
  font-size: 20rpx;
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
}
.arr view.active::before{
  content: "";
  position: absolute;
  bottom: -25rpx;
  right: -25rpx;
  width: 50rpx;
  height: 50rpx;
  background: #c4232b;
  transform: rotate(45deg)
}

.foot{
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  display: flex;
  padding-bottom: 30rpx;
  background: #fff;
}
.foot view{
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  border-top: 1rpx solid #c4232b;
  border-bottom: 1rpx solid #c4232b;
}
.foot view navigator{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.foot view:first-child{
  color: #999;
}
.foot view:last-child{
  color: #fff;
  background: #c4232b;
}