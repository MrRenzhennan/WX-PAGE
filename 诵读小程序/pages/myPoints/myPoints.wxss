/* pages/myPoints/myPoints.wxss */

page {
  background: #f5f5f5;
}

.user-top {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #fff;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.user-top image {
  border-radius: 50%;
  width: 90rpx;
  height: 90rpx;
}

.user-top text {
  letter-spacing: 2rpx;
}

.user-top > text {
  font-size: 36rpx;
  font-weight: 600;
  margin-top: 10rpx;
}

.user-top > view {
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}

.user-top > view  text:first-child {
  font-size: 30rpx;
  color: #999;
}

.user-top text:last-child {
  font-size: 38rpx;
  color: #c4232b;
  font-weight: 600;
}

.title {
  width: 100%;
  padding: 30rpx 30rpx 0rpx 45rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  background: #fff;
  color: #000;
}

.list-box {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.list {
  box-sizing: border-box;
  width: 100%;
  padding: 30rpx 0rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f5f5f5;
}
.list > view:last-child{
  color: #c4232b;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}
.list > view:first-child view:first-child {
  font-size: 30rpx;
  color: #000;
}

.list > view:first-child view:last-child {
  font-size: 24rpx;
  color: #999;
  margin-left: 15rpx;
}
