/* activityDetail/activityDetail.wxss */
page{
  background: #fff;
}
.title{
  font-size: 48rpx;
  color: #000;
  box-sizing: border-box;
  padding: 30rpx;
  font-family: PingFang-SC-Bold;
}

.swiper-change{
  width: 100%;
  display: flex;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  border-bottom: 1px solid #f5f5f5;
  align-items: center;
  justify-content: center;
}
.swiper-change view{
  border-bottom: 4rpx solid transparent;
  padding-bottom: 15rpx;
  color: #000;
}
.swiper-change view:first-child{
  margin-right: 40rpx;
}
.swiper-change view.active{
  color: #c4232b;
  border-bottom: 4rpx solid #c4232b;
}

swiper{
  height: 100%;
  padding-bottom: 30rpx;
}
swiper scroll-view{
  width: 100%;
  height: 100%;
}
swiper scroll-view .msg{
  box-sizing: border-box;
  padding: 30rpx;
  width: 100%;
  height: calc(100% - 132rpx);
  overflow: hidden;
  color: #000;
  font-size: 30rpx;
  line-height: 50rpx;
  font-family: PingFang-SC-Medium;
  letter-spacing: 2rpx;
}
swiper scroll-view .msg.all{
  height: max-content;
}
swiper scroll-view .shwo-all{
  width: 480rpx;
  height: 72rpx;
  background: #f4f4f4;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  border-radius: 80rpx;
  margin: 30rpx auto;
}
swiper scroll-view .shwo-all view{
  width: 25rpx;
  height: 25rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #999;
  margin-left: 20rpx;
}
swiper scroll-view .shwo-all view image{
  width: 12rpx;
  height: 9rpx;
}
.author{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}
.user-box{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}
.info{
  display: flex;
  align-items: center;
  font-family: PingFang-SC-Medium;
  border-bottom: 1rpx solid #d9d9d9;
  margin-bottom: 10rpx;
}
.info image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-left: 10rpx;
}
.name{
  font-size: 38rpx;
  color: #000;
  font-weight: 600;
  letter-spacing: 2rpx;
}
.num{
  font-size: 26rpx;
  color: #999;
  letter-spacing: 2rpx;
  margin-top: 10rpx;
}
.item{
  width: 100%;
  padding: 15rpx 0;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
  box-sizing: border-box;
}
.item text:first-child{
  font-size: 30rpx;
  color: #000;
}
.item text:last-child{
  font-size: 28rpx;
  color: #999;
}
.foot-btn{
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 160rpx;
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 40rpx;
  background: #c4232b;
  color: #fff;
}