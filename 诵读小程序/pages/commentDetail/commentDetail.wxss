/* pages/commentDetail/commentDetail.wxss */

page {
  background: #fff;
  font-family: PingFang-SC-Medium;
}

.table {
  width: 100%;
  padding: 30rpx;
  padding-bottom: 190rpx;
  box-sizing: border-box;
}

.table:first-child {
  padding-bottom: 0rpx;
  border-top: 1rpx solid #f5f5f5;
}

.line {
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
}

.huif-all {
  width: 100%;
  height: 80rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  line-height: 80rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold;
  border-bottom: 1rpx solid #f5f5f5;
  letter-spacing: 2rpx;
  font-weight: 600;
}

.table .item {
  width: 100%;
  display: flex;
  margin-bottom: 30rpx;
}

.table .item > view {
  width: calc(100% - 70rpx);
  padding-left: 20rpx;
  box-sizing: border-box;
}

.table .item .botm {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
}

.table .item .botm > view {
  display: flex;
  align-items: center;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.dian {
  font-size: 28rpx;
  color: #999;
  margin: 0 20rpx;
  font-weight: 600;
}

.zan-num {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

.back {
  font-size: 25rpx;
  color: #999;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 50rpx;
  border-radius: 50rpx;
  background: #f5f5f5;
  letter-spacing: 2rpx;
}

.Avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

.author {
  font-size: 30rpx;
  color: #000;
  margin-bottom: 10rpx;
}

.pl-text {
  font-size: 28rpx;
  color: #000;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.icon_zan {
  width: 29rpx;
  height: 30rpx;
}

.foot {
  position: fixed;
  background: #fff;
  bottom: 0;
  width: 100%;
  height: 160rpx;
  padding: 20rpx 30rpx 30rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-top: 1rpx solid #f5f5f5;
}

.foot .input-box {
  width: 370rpx;
  height: 55rpx;
  display: flex;
  align-items: center;
  background: #f4f4f4;
  border-radius: 55rpx;
  box-sizing: border-box;
}

.foot .input-box image {
  width: 34rpx;
  height: 30rpx;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.foot .input-box text {
  font-size: 24rpx;
  color: #999;
}

.foot .pl {
  display: flex;
  align-items: center;
}

.foot .num {
  font-size: 22rpx;
  color: #999;
  margin-left: 10rpx;
}

.icon_pinglun {
  width: 36rpx;
  height: 36rpx;
}

.icon_weixin {
  width: 44rpx;
  height: 36rpx;
}

.icon_pengyouquan {
  width: 36rpx;
  height: 36rpx;
}

.taxtArea-box{
  width: 100%;
  height: 220rpx;
  padding: 30rpx;
  background: #f5f5f5;
  border-top: 1rpx solid #eaeaea;
  border-bottom: 1rpx solid #eaeaea;
  position: fixed;
  bottom: 0;
  box-sizing: border-box;
  display: flex;
  align-items: flex-end;
}
.taxtArea-box .go{
  font-size: 26rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  color: #c4232b;
  letter-spacing: 2rpx;
}
.taxtArea-box textarea{
  width: 615rpx;
  height: 100%;
  background: #fff;
  font-size: 24rpx;
  border: 1rpx solid #eaeaea;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
}