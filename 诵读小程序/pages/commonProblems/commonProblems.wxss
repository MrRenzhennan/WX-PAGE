/* pages/commonProblems/commonProblems.wxss */

page {
  background: #f5f5f5;
}

.item {
  box-sizing: border-box;
  padding: 0 30rpx;
  width: 100%;
  background: #fff;
}

.line-blod {
  width: 100%;
  height: 20rpx;
  background: #f5f5f5;
}

.icon-right {
  width: 13rpx;
  height: 22rpx;
}

.list-item {
  width: 100%;
  padding: 30rpx 0px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
}

.item-label {
  font-size: 30rpx;
  color: #000;
  font-weight: 600;
  letter-spacing: 2rpx;
  font-family: PingFang-SC-Medium;
}
.item-detal{
  width: 100%;
}

.item-detal{
  font-size: 28rpx;
  color: #999999;
  line-height: 50rpx;
  transition: all .3s;
  overflow: hidden;
  padding: 30rpx 0;
}
.item-detal-none{
  height: 0rpx;
  padding: 0rpx;
}