.container {
  width: 100%;
  box-sizing: border-box;
}

.swip-top {
  width: 100%;
  height: 250rpx;
  background-color: #c4232b;
  position: relative;
}

.swiper-box {
  position: absolute;
  top: 0px;
  left: 30rpx;
  width: 690rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

swiper {
  height: 340rpx;
}

swiper image {
  width: 690rpx;
  height: 340rpx;
}

.tab-box {
  widows: 100%;
  height: 220rpx;
  background: #f5f5f5;
  padding: 130rpx 30rpx 0px 30rpx;
  box-sizing: border-box;
}

.tab-sub {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tab-item {
  /* width: 130rpx; */
  letter-spacing: 1rpx;
  height: 60rpx;
  font-size: 30rpx;
  color: #000;
  text-align: center;
  box-sizing: border-box;
  border-bottom: 4rpx solid #f5f5f5;
}

.tab-item.active {
  font-weight: 600;
  color: rgb(196, 35, 43);
  border-bottom: 4rpx solid rgb(196, 35, 43);
}

.list {
}

.list .list-item {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}

.list .list-item.flex {
  display: flex;
}

.top-btn {
  width: 64rpx;
  height: 30rpx;
  font-size: 22rpx;
  letter-spacing: 1px;
  color: #fff;
  background: rgb(196, 35, 43);
  text-align: center;
  line-height: 30rpx;
  display: inline-block;
  border-radius: 6rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.new-text {
  font-size: 30rpx;
  color: #000;
  letter-spacing: 1rpx;
  line-height: 30rpx;
  font-weight: 600;
  font-family: PingFang-SC-Bold;
}

.list-item .btm {
  font-family: PingFang-SC-Medium;
  font-size: 24rpx;
  color: rgb(153, 153, 153);
  margin-top: 20rpx;
}

.list-item .btm text {
  margin-right: 30rpx;
}

.bottom-line {
  border-bottom: 10rpx solid #f5f5f5;
}

.item-img {
  width: 226rpx;
  height: 150rpx;
  margin-left: 65rpx;
}

.list-item image {
  width: 226rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.bim-img {
  display: flex;
}

.bim-img image {
  margin-top: 20rpx;
  margin-right: 4rpx;
}

.video-box {
  margin-top: 10rpx;
}
.video-box video{
  width: 100%;
}
