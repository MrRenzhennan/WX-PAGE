/* pages/immediatelyChange/immediatelyChange.wxss */

.box {
  width: 100%;
  padding: 60rpx 40rpx 0 40rpx;
  box-sizing: border-box;
}

.input-box {
  height: 90rpx;
  width: 100%;
  border-bottom: 1px solid  #bfbfbf;
  display: flex;
  font-size: 28rpx;
  justify-content: flex-start;
  align-items: center;
  position: relative;
}
.input-box text{
  margin-right: 10rpx;
  margin-left: 20rpx;
}
.img-box{
  position: absolute;
  bottom: 0;
  right: 0;
}
.img-box .ren{
  width: 70rpx;
  height: 93rpx;
}
.img-box .jia{
  width: 24rpx;
  height: 26rpx;
}
.btn{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 120rpx;
}
.btn button{
  width: 310rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #518dfa;
}


.model{
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  padding: 90rpx 50rpx 0 50rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}
.model .center-box{
  width: 100%;
  height: 660rpx;
  border: 1px solid #bfbfbf;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.model .center-box .yuan{
 width: 100rpx;
 height: 100rpx;
 border-radius: 50%;
 background: #518dfa;
 display: flex;
 justify-content: center;
 align-items: center;
 margin-top: 100rpx;
}
.model .center-box .yuan image{
  width: 59rpx;
  height: 48rpx;
}
.model .center-box .tx{
 font-size: 60rpx;
 margin-top: 40rpx;
}
.model .btn{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 120rpx;
}
.model .btn button{
  width: 310rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #518dfa;
}