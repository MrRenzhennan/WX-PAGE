/* pages/integralWithdrawal/integralWithdrawal.wxss */

.my-balance {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}

.my-balance .center {
  width: 100%;
  height: 150rpx;
  border: 1px solid #e1e1e1;
  background: #f5f5f5;
  box-sizing: border-box;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 34rpx;
  font-weight: 600;
}

.txfs {
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 40rpx;
  margin-left: 50rpx;
}

.type-btn {
  margin-top: 45rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 0 60rpx;
}

.type-btn .btn {
  width: 250rpx;
  height: 70rpx;
  border: 1px solid #a5a5a5;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  letter-spacing: 4rpx;
  font-weight: 600;
  position: relative;
  box-sizing: border-box;
}
.type-btn .btn .active{
 width: 100%;
 height: 100%;
 position: absolute;
 top: 0;
 left: 0;
 z-index: -1;
}
.type-btn .bor-none{
  border:none;
}
.type-btn .btn image {
  margin-right: 20rpx;
}

.type-btn .btn .wx {
  width: 47rpx;
  height: 34rpx;
}

.type-btn .btn .zfb {
  width: 36rpx;
  height: 36rpx;
}

.money {
  margin-top: 45rpx;
  width: 100%;
  padding: 0 60rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.money .box {
  position: relative;
  box-sizing: border-box;
  width: 160rpx;
  height: 90rpx;
  border: 1px solid #a5a5a5;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 4rpx;
  margin-bottom: 30rpx;
}

.money .bor-none{
  border:none;
}
.money .box .active{
 width: 100%;
 height: 100%;
 position: absolute;
 top: 0;
 left: 0;
}

.zy{
  color: #a5a5a5;
  font-size: 32rpx;
}

.tx{
  margin-top: 30rpx;
  font-size: 20rpx;
  color: #a5a5a5;
  box-sizing: border-box;
  padding-left:60rpx;
  padding-right: 60rpx;
  display: flex;
  flex-direction: column;
  line-height: 30rpx;
}
