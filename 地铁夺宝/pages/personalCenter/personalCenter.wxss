/* pages/personalCenter/personalCenter.wxss */
.bg{
  width: 100%;
  height: 273rpx;
  position: relative;
}
.bg image{
 width: 100%;
 height: 273rpx;
 position: absolute;
 top: -10rpx;
}
.bg .qd-box{
  width: 145rpx;
  height: 145rpx;
  border-radius: 50%;
  background: #39cf6c;
  position: absolute;
  top: 35rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fde134;
  font-size: 32rpx;
  letter-spacing: 10rpx;
}
.progress{
  width: 575rpx;
  height: 155rpx;
  position: relative;
  top: -70rpx;
  border:1px solid #eeeeee;
  left: 50%;
  transform: translateX(-50%);
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
}
.progress .box{
  width: 500rpx;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.progress .box .line{
  position: absolute;
  width: 98%;
  margin-left: 1%;
  height: 1px;
  background: #000000;
  top: 50%;
  z-index: 0;
}
.progress .box .line .progress-line{
   position: absolute;
  height: 1px;
  top: 0;
  left: 0;
  z-index: 1;
  background: #fde134;
}
.progress .box .sm{
  width: 40rpx;
  height: 40rpx;
  position: relative;
  z-index: 2
}
.progress .box .sm image{
  width: 44rpx;
  height: 40rpx;
}
.progress .box .sm .selected{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #ccc;
  color: #7d7d7d;
  font-size: 22rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.progress .box .sm .selectedOk{
  background: #fde134;
}
.progress .box .sm .selected image{
  width: 25rpx;
  height: 21rpx;
}
.picture{
  margin-top: 45rpx;
  display: flex;
  justify-content: center;
}
.picture image{
  width: 144rpx;
  height: 144rpx;
}
.name{
  margin-top: 55rpx;
  font-size: 32rpx;
  text-align: center;
}
.operation{
  margin-top: 100rpx;
  display: flex;
  justify-content: space-around;
}
.operation .box{
  width: 130rpx;
  height: 130rpx;
  border: 1px solid #eee;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.operation .box image{
  width: 63rpx;
  height: 59rpx;
}
.operation .box text{
  font-size: 24rpx;
}

.sign-modal{
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}
.sign-modal view{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 100rpx;
  position: relative;
}
.sign-modal view .text{
  position: absolute;
  bottom: 70rpx;
  color: #fff;
  font-size: 28rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  letter-spacing: 1px;
}
.sign-modal view .text text{
  margin-top: 10rpx;
}
.sign-modal image{
  width: 456rpx;
  height: 503rpx;
}