/* pages/TheAnswerPage/TheAnswerPage.wxss */
.logo-s{
  width: 100%;
}
.logo-s image{
  width: 90rpx;
  height: 97rpx;
  margin: 50rpx 0 0 50rpx;
}
.answer_index{
  width: 100%;
  display: flex;
  justify-content: center;
}
.answer_index image{
  width: 465rpx;
  height: 120rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.slogan{
  width: 434rpx;
  height: 454rpx;
  margin: 0 auto;
  position: relative;
  margin-top: 20rpx;
}
.slogan image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.slogan .center{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  box-sizing: border-box;
  padding-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-size: 28rpx;
  line-height: 45rpx;
  letter-spacing: 2rpx;
}
.start-answer{
  width: 100%;
  margin-top: 50rpx;
  text-align: center;
}
.start-answer button{
  width: 235rpx;
  height: 65rpx;
  background: #4d85e4;
  color: #fff;
  font-size: 28rpx;
}
.ranking{
  margin-top: 32rpx;
  text-align: center;
  color: #4d85e4;
  font-size: 32rpx;
}