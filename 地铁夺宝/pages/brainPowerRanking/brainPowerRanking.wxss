/* pages/brainPowerRanking/brainPowerRanking.wxss */

.box {
  width: 100%;
  height: 100vh;
  box-sizing: border-box;
  padding: 0px 30rpx 50rpx 30rpx;
}
.bgc{
  width: 100%;
  height: 100%;
  background: #e2eafb;
  border-radius: 0 0 20rpx 20rpx;
}
.bgc .img-box{
  padding-top: 105rpx;
  display: flex;
  justify-content: center;
}
.bgc .img-box image{
  width: 461rpx;
  height: 130rpx;
}
.bgc .list{
  width: 600rpx;
  box-sizing: border-box;
  padding: 30rpx;
  background: #6888c3;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
.bgc .list .title{
  width: 100%;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #fff;
  margin-bottom: 20rpx;
}
.bgc .list .li{
  width: 100%;
  height: 60rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.5);
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
}
.head-portrait{
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  background: #214fa3;
}