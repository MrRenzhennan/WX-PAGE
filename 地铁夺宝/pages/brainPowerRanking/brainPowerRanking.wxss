/* pages/brainPowerRanking/brainPowerRanking.wxss */

.box {
  width: 100%;
  /* height: 100vh; */
  
  min-height: 100vh;
  box-sizing: border-box;
  padding: 0px 30rpx 50rpx 30rpx;
}
.bgc{
  width: 100%;
  min-height: 95vh;
  background: #e2eafb;
  border-radius: 0 0 20rpx 20rpx;
}
.bgc .img-box{
  padding-top: 105rpx;
  display: flex;
  justify-content: center;
}
.bgc .img-box image{
  width: 461rpx;
  height: 130rpx;
}
.bgc .list{
  width: 600rpx;
  box-sizing: border-box;
  padding: 30rpx;
  background: #6888c3;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}
.bgc .list .title{
  width: 100%;
  display: flex;
  font-size: 24rpx;
  color: #fff;
  margin-bottom: 20rpx;
}
.bgc .list .title text{
  text-align: center;
  box-sizing: border-box;
}
.bgc .list .title .tt{
  width: 1%;
}
.bgc .list .title .t1{
  width: 15%;
}
.bgc .list .title .t2{
  width: 20%;
}
.bgc .list .title .t3{
  width: 25%;
}
.bgc .list .title .t4{
  width: 20%;
}
.bgc .list .title .t5{
  width: 20%;
}
.bgc .list .li{
  width: 100%;
  height: 60rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.5);
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #fff;
}
.bgc .list .li .l1{
  width: 15%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bgc .list .li .l2{
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bgc .list .li .l3{
  width: 25%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bgc .list .li .l4{
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bgc .list .li .l5{
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.head-portrait{
  width: 35rpx;
  height: 35rpx;
  border-radius: 50%;
  background: url(https://ss3.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=2924155031,1596857498&fm=26&gp=0.jpg);
  background-size: 100% 100%;
}


.btn{
 width: 100%;
 margin-top: 30rpx;
 padding-bottom: 30rpx;
}
.btn button{
  background: #6888c3;
  width: 200rpx;
  height: 90rpx;
  font-size: 32rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}