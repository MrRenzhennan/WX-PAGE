/* pages/myPoints/myPoints.wxss */

.jf-bg {
  width: 100%;
  height: 273rpx;
  position: relative;
  top: -10rpx;
}

.jf-bg image {
  width: 100%;
  height: 100%;
}

.title {
  position: absolute;
  top: 50rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #fff;
}

.title image {
  width: 144rpx;
  height: 144rpx;
  margin-bottom: 10rpx;
}

.current-jf {
  width: 100%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  color: #000;
  justify-content: center;
  align-items: center;
  letter-spacing: 5rpx;
}

.current-jf text {
  font-size: 28rpx;
}

.current-jf .num {
  margin-top: 20rpx;
  font-size: 32rpx;
}

.both {
  width: 100%;
  display: flex;
  justify-content: space-around;
}

.both .box {
  width: 210rpx;
  height: 75rpx;
  border: 2px solid #eee;
  border-radius: 20rpx;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  letter-spacing: 2px;
}

.both .b1 {
  background: #fec547;
}

.both .b2 {
  background: #f17c4d;
}

.xx-box {
  position: relative;
  width: 155rpx;
  height: 30rpx;
}

.bg-ok {
  position: absolute;
  top: 0;
  left: 0;
}

.xx-box image {
  width: 31rpx;
  height: 29rpx;
}
