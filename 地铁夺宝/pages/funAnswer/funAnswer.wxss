/* pages/funAnswer/funAnswer.wxss */

.video-box {
  width: 100%;
  height: 330rpx;
  box-sizing: border-box;
}

.video-box video {
  width: 100%;
  height: 100%;
}

.answer {
  margin-top: 30rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.answer .center {
  width: 100%;
  padding-top: 50rpx;
  background: #dde6fa;
  border-radius: 20rpx;
  font-size: 32rpx;
}

.answer .center .title {
  margin-left: 50rpx;
  margin-bottom: 45rpx;
}

.answer .center .radio-group {
  display: flex;
  flex-direction: column;
}

.answer .center .radio-group .radio {
  margin-left: 90rpx;
  margin-bottom: 45rpx;
  display: flex;
  align-items: center;
}

.submit {
  margin-top: 75rpx;
}

.submit button {
  width: 295rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background: #4e84e5;
}

/* 正确弹框 */

.correct-modal {
  width: 100%;
  height: 100vh;
  z-index: 1;
  position: fixed;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding: 50rpx 20rpx 20rpx 20rpx;
  overflow: visible;
}

.correct-modal .box {
  width: 100%;
  height: 100%;
  border: 1px solid #9b9b9b;
  border-radius: 10rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: visible;
  z-index: 9999;
}
.correct-modal .box .close{
  position: absolute;
  top: 47rpx;
  right: 14rpx;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  /* border: 1px solid #9b9b9b; */
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #9b9b9b;
  background: #fff
}

.correct-modal .box .songshu {
  width: 640rpx;
  height: 560rpx;
  margin-top: 40rpx;
}

.correct-modal .box  .tx {
  width: 595rpx;
  font-size: 34rpx;
  margin-top: 40rpx;
  line-height: 60rpx;
}

.correct-modal .box .btn {
  margin-top: 50rpx;
}

.correct-modal .box .btn cover-view {
  width: 295rpx;
  height: 85rpx;
  color: #fff;
  font-size: 32rpx;
  background: #4e84e5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.QR_code {
  width: 134rpx;
  height: 134rpx;
  margin-top: 30rpx;
}

/* 错误弹框 */

